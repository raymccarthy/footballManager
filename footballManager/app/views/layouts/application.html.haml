!!!
%html
  %head
    %title= "Soccer Manager | #{@title}"
    = csrf_meta_tag
    = render 'layouts/stylesheets'

  %body
    .container.grey.round
      .row.round
        %nav.topbar
          %ul
            %li= link_to "Sign in", '#'
            %li= link_to "Settings", '#'
            %li= link_to "Profile", '#'
      .row.round
        .onecol
          = link_to image_tag("logo.jpg", :alt => "Sample App", :class => "round",:size => "75x75"), root_path
          %nav.leftbar
            %ul
              %li= link_to "Home", root_path
              %li= link_to "Help", help_path

        .elevencol.last.white.round
          = yield
      .row.trailer.round
        %nav.topbar
          %ul
            %li= link_to "About", about_path
            %li= link_to "Contact",contact_path

          %p

